service cloud.firestore {
  match /databases/{database}/documents {
    match /tricksSR/{document=**} {
      allow read;
      allow write: if request.auth.uid == 'g0G3A7FxieN333lZ2RKclkmv9Uw1';
    }
    match /i18n/{document=**} { // Gotta fix this, untranslatable should be readable only by admins
      allow read;
      allow write: if request.auth.uid == 'g0G3A7FxieN333lZ2RKclkmv9Uw1';
    }
    match /products/{document=**} {
      allow read;
      allow write: if request.auth.uid == 'g0G3A7FxieN333lZ2RKclkmv9Uw1';
    }
    match /orders/{document=**} {
      allow read: if false;
      allow create;
      allow write: if request.auth.uid == 'g0G3A7FxieN333lZ2RKclkmv9Uw1';
    }
  }
}
