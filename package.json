{
  "name": "the-tricktionary",
  "version": "1.15.0",
  "description": "A list of jumprope tricks with name, description and video",
  "homepage": "https://the-tricktionary.com",
  "repository": {
    "type": "git",
    "url": "the-tricktionary/web"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/storage": "^0.6.1",
    "firebase-admin": "^5.4.3",
    "mailgun-js": "^0.10.1",
    "moment": "^2.17.1",
    "objectdiff": "^1.1.0"
  },
  "devDependencies": {
    "firebase-tools": "firebase/firebase-tools",
    "jsdoc": "^3.3.0",
    "lite-server": "*",
    "minami": "^1.1.1",
    "postcss-cli": "*",
    "postcss-cssnext": "*",
    "postcss-csso": "*",
    "uglify-js": "*"
  },
  "scripts": {
    "dev": "cd app && lite-server",
    "start": "firebase serve",
    "pretest": "rm -rf public && cp -r app public && find public -type f -name '*.css' -exec rm {} + && find public -type f -name '*.js' -not -path 'public/static/js/*' -exec rm {} +",
    "test": "chmod +x ./deploy.sh && ./deploy.sh",
    "deploy": "firebase deploy --project project-5641153190345267944",
    "staging": "firebase deploy --project tricktionary-staging",
    "docs": "jsdoc -r -c .jsdoc.json"
  }
}
