{
  "rules": {
    "booklets": {
      ".read": true,
      ".write": false
    },
    "checklist": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid || root.child('users/' + $uid + '/profile/public').val() === true || root.child('users/' + $uid + '/coaches/' + auth.uid).val() === true"
      }
    },
    "contact": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
      ".read": "auth.uid === 'g0G3A7FxieN333lZ2RKclkmv9Uw1' || auth.uid === 'Kpz3afszjBR0qwZYUrKURRJx2cm2'",
      ".write": "auth.uid === 'g0G3A7FxieN333lZ2RKclkmv9Uw1' || auth.uid === 'Kpz3afszjBR0qwZYUrKURRJx2cm2'"
    },
    "globalnotice": {
      ".read": true,
      ".write": false
    },
    "news": {
      ".read": true,
      ".write": "auth.uid === 'g0G3A7FxieN333lZ2RKclkmv9Uw1' || auth.uid === 'Kpz3afszjBR0qwZYUrKURRJx2cm2'"
    },
    "speed": {
      "scores": {
        "$uid": {
          ".write": "$uid === auth.uid",
          ".read": "$uid === auth.uid"
        }
      },
      "highscores": {
        "$uid": {
          ".read": "$uid === auth.uid || (root.child('users/' + $uid + '/profile/public').val() === true && root.child('users/' + $uid + '/profile/speed').val() === true)",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "stats": {
      ".read": true,
      ".write": false
    },
    "translators": {
      ".write": false,
      "$uid": {
        ".read": "auth.uid == $uid"
      }
    },
    "tricks": {
      ".read": true,
      ".write": false,
      "$level": {
        "subs": {
          "$sub": {
            "i18n": {
              "$lang": {
                ".write": "root.child('translators').child(auth.uid).val() == $lang && root.child('translators').child(auth.uid).exists()"
              }
            }
          }
        }
      }
    },
    "tricktypes": {
      ".read": true,
      ".write": false
    },
    "users": {
      "$uid": {
        "students": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "$studentuid": {
            ".read": "$studentuid === auth.uid",
            ".write": "$studentuid === auth.uid"
          }
        },
        "coaches": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "profile": {
          ".read": "$uid === auth.uid || data.child('public').val() === true",
          ".write": "$uid === auth.uid"
        },
        "hideCompleted": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
}

