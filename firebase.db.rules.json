{
  "rules": {
    "admins": {
      ".read": true,
      ".write": false
    },
    "booklets": {
      ".read": true,
      ".write": false
    },
    "checklist": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid || root.child('users/' + $uid + '/profile/public').val() === true || root.child('users/' + $uid + '/coaches/' + auth.uid).val() === true"
      }
    },
    "contact": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
      ".read": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true",
      ".write": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true"
    },
    "globalnotice": {
      ".read": true,
      ".write": false
    },
    "i18n": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true",
      "translated": {
        "$lang": {
          ".write": "root.child('translators').child(auth.uid).val() == $lang && root.child('translators').child(auth.uid).exists()"
        }
      }
    },
    "langs": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true"
    },
    "news": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true"
    },
    "speed": {
      "scores": {
        "$uid": {
          ".write": "$uid === auth.uid",
          ".read": "$uid === auth.uid"
        }
      },
      "highscores": {
        "$uid": {
          ".read": "$uid === auth.uid || (root.child('users/' + $uid + '/profile/public').val() === true && root.child('users/' + $uid + '/profile/speed').val() === true)",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "stats": {
      ".read": true,
      ".write": false
    },
    "translators": {
      ".write": false,
      "$uid": {
        ".read": "auth.uid == $uid"
      }
    },
    "tricks": {
      ".read": true,
      ".write": false,
      "$level": {
        "subs": {
          "$sub": {
            "i18n": {
              "$lang": {
                ".write": "root.child('translators').child(auth.uid).val() == $lang && root.child('translators').child(auth.uid).exists()"
              }
            },
            "levels": {
              ".write": "root.child('admins').child(auth.uid).exists() && root.child('admins').child(auth.uid).val() === true",
              "$federation": {
                "verified": {
                  ".write": "root.child('verifiers').child(auth.uid).child('federation').val() == $federation && root.child('verifiers').child(auth.uid).exists() && (data.val() == false || !data.exists() || root.child('verifiers').child(auth.uid).child('vLevel').val() >= data.child('vLevel').val())"
                }
              }
            }
          }
        }
      }
    },
    "tricktypes": {
      ".read": true,
      ".write": false,
      "$lang": {
        ".write": "root.child('translators').child(auth.uid).val() == $lang && root.child('translators').child(auth.uid).exists()"
      }
    },
    "users": {
      "$uid": {
        "students": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "$studentuid": {
            ".read": "$studentuid === auth.uid",
            ".write": "$studentuid === auth.uid"
          }
        },
        "fcm": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "coaches": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "lang": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "profile": {
          ".read": "$uid === auth.uid || data.child('public').val() === true",
          ".write": "$uid === auth.uid"
        },
        "hideCompleted": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "verifiers": {
      ".write": false,
      "$uid": {
        ".read": "auth.uid == $uid"
      }
    }
  }
}
